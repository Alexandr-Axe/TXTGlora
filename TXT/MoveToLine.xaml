<Window x:Class="TXT.MoveToLine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TXT"
        mc:Ignorable="d"
        Title="MoveToLine" Height="130" Width="250"
        ResizeMode="NoResize">
    <Grid>
        <Label Content="Přejít na řádek :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="linenumber" HorizontalAlignment="Left" Height="23" Margin="99,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="Linebox_PreviewTextInput"/>
        <Button x:Name="movetobutton" Content="Přejít" HorizontalAlignment="Left" Margin="27,60,0,0" VerticalAlignment="Top" Width="75" Click="Movetobutton_Click"/>
        <Button x:Name="closebutton" Content="Zrušit" HorizontalAlignment="Left" Margin="147,60,0,0" VerticalAlignment="Top" Width="75" Click="Movetobutton_Click"/>

    </Grid>
</Window>
